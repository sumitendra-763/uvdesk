<div class="uv-kb-section">
	<div class="uv-kb-section-head">
		<h1 class="uv-text-center">{{ "Browse via Folders"|trans}}</h1>
		<p class="uv-text-center uv-fixed-width">{{ "Looking for something that is queried generally? Choose a relevant folder from below to explore possible solutions"|trans}}</p>
	</div>
	<div class="uv-kb-section-layout uv-kb-layout-folder">
    	{% for folder in solutions.results %}
			<!--Folder-->
			<div class="uv-kb-folder">
				<div class="uv-kb-folder-lt">
					{% if folder.solutionImage %}
						<img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('') }}{{ folder.solutionImage }}">
					{% endif %}
				</div>
				<div class="uv-kb-folder-rt">
					<p><span>{{folder.name}}</span></p>
					<p><a href="{{ path('helpdesk_knowledgebase_folder', {'solution': folder.id}) }}">{{folder.categoriesCount}} {{"Categories"|trans}}</a></p>
					<p><a href="{{ path('helpdesk_knowledgebase_folder_article_collection', {'solution': folder.id}) }}">{{folder.articleCount}} {{"Articles"|trans}}</a></p>
				</div>
			</div>
			<!--//Folder-->
    	{% endfor %}
	</div>
</div>